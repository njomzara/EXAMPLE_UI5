<mvc:View
		xmlns:c="sap.ui.core"
		controllerName="com.packageEXAMPLE_UI5.controller.View1"
		xmlns:mvc="sap.ui.core.mvc"
		xmlns:u="sap.ui.unified"
        xmlns:core="sap.ui.core"
		xmlns="sap.m"
		xmlns:sf="sap.ui.layout.form"
		xmlns:f="sap.f"
		xmlns:layout="sap.ui.layout"
		xmlns:t="sap.ui.table"
		height="100%"
		width="100%">
	<SplitApp id="SplitAppDemo" 
		initialDetail="detail" 
		initialMaster="master" 
		orientationChange="onOrientationChange">
		<detailPages>
			<Page showHeader="false">
			<VBox>
				<items>
					<Panel>
						<content>
							<Title id="title" text="Display Assembled Filings" width="100%" textAlign="Center"></Title>
						</content>
					</Panel>
				</items>
			</VBox> 
			<VBox>
				<items>
					<HBox width="100%">
						<items>
							<HBox width="80%" alignContent="Stretch" displayInline="true">
								<items>
									<Panel expandable="false" backgroundDesign="Transparent">
										<content>
											<Label text="Filing Form" />
											<MultiInput
											id="inptFilingForm"
											showValueHelp="true"
											valueHelpRequest="onSrchHelp"
											value="Crime"/>
										</content>
									</Panel>
									<Panel expandable="false" backgroundDesign="Transparent">
										<content>
											<Label text="Filing Period" />
											<MultiInput
											id="inptFilingPeriod"
											showValueHelp="true"
											valueHelpRequest="onSrchHelp"
											placeholder="March 2017"
											value="March 2017"/>
										</content>
									</Panel>
									<Panel expandable="false" backgroundDesign="Transparent">
										<content>
											<Label text="Filing Teritory" />
											<MultiInput
											id="inptFilingTeritory"
											showValueHelp="true"
											valueHelpRequest="onSrchHelp"
											value="Texas"/>
										</content>
									</Panel>
								</items>
							</HBox>
							<VBox width="20%" alignContent="Center">
								<items>
									<Panel expandable="false" backgroundDesign="Transparent">
										<content>
											<Button id="getFilings" text="Get Filings" type="Emphasized" press="getFilings" width="100%"/>
										</content>
									</Panel>
								</items>
							</VBox>
						</items>
					</HBox>
					<Table items="{/}">
						<columns>
							<Column>
								<header>
									<Label text="Name"/>
								</header>
							</Column>
							<Column>
								<header>
									<Label text="Username"/>
								</header>
							</Column>
							<Column>
								<header>
									<Label text="Email Address"/>
								</header>
							</Column>
						</columns>
						<items>
							<ColumnListItem type="Active">
								<cells>
									<Text text="{name}"/>
									<Text text="{username}"/>
									<Text text="{email}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</items>
			</VBox>
		</Page>
		</detailPages>
		
		<masterPages>
			<Page title="{i18n>title}" showHeader="false">
				<content>
					<Title id="tabTitle" 
						   text="Clothing" 
						   textAlign="Center" 
						   width="100%" 
						   class="custTitleStyle"/>
					<t:TreeTable
						id="TreeTableBasic"
	                    rows="{path:'/catalog/clothing', parameters: {arrayNames:['categories']}}"
	                    selectionMode="MultiToggle"
	                    enableSelectAll="false"
	                    ariaLabelledBy="title"
	                    height="100%">
						 <t:extension>
		                    <Toolbar>
		                        <Button text="Collapse all" press="onCollapseAll" width="25%"/>
		                        <Button text="Collapse selection" press="onCollapseSelection" width="25%"/>
		                        <Button text="Expand first level" press="onExpandFirstLevel" width="25%"/>
		                        <Button text="Expand selection" press="onExpandSelection" width="25%"/>
		                    </Toolbar>
                		</t:extension>
                		<t:columns>
                			<t:Column width="50%">
		                        <Label text="Categories"/>
		                        <t:template>
		                            <Text text="{name}" wrapping="false" />
		                        </t:template>
		                    </t:Column>
		                    <t:Column width="25%">
		                        <Label text="Price"/>
		                        <t:template>
		                            <u:Currency value="{amount}" currency="{currency}"/>
		                        </t:template>
		                    </t:Column>
		                    <t:Column width="25%">
		                        <Label text="Size"/>
		                        <t:template>
		                            <Select
		                                    items="{path: '/sizes', templateShareable: true}"
		                                    selectedKey="{size}"
		                                    visible="{= !!${size}}"
		                                    forceSelection="false">
		                                <core:Item key="{key}" text="{value}"/>
		                            </Select>
		                        </t:template>
		                    </t:Column>
                		</t:columns>
					</t:TreeTable>
				</content>
			</Page>
		</masterPages>
		
	</SplitApp>
</mvc:View>